                        <ComboBox x:Name="FitterDataComboBox" Grid.Column="1" Width="60" IsEditable="False" BorderBrush="{x:Null}"  ItemsSource="{x:Static Helper:ResourceMap.TimeSearchTypeHasntable}" DisplayMemberPath="Value" SelectedValuePath="Key" SelectedIndex="0" SelectionChanged="FitterComboBox_SelectionChanged" FontSize="14"/>
                        <DatePicker x:Name="StartDatePicker" Grid.Column="2" BorderThickness="0" VerticalContentAlignment="Stretch" SelectedDateChanged="RangeDatePicker_SelectedDateChanged" Foreground="{StaticResource FgColor}" FontSize="14"/>
                        <TextBlock Grid.Column="4" Text="-" VerticalAlignment="Center"/>
                        <DatePicker x:Name="EndDatePicker"  Grid.Column="6" BorderThickness="0" VerticalContentAlignment="Stretch" SelectedDateChanged="RangeDatePicker_SelectedDateChanged" Foreground="{StaticResource FgColor}" FontSize="14"/>
                    </Grid>
                </Border>

            </Grid>
        </Border>

        <DataGrid Grid.Row="1" x:Name="SheetDataGrid"  ItemsSource="{Binding Source={StaticResource ViewSource}}"
                  AutoGenerateColumns="False" IsReadOnly="True" CanUserSortColumns="True"
                  SelectionMode="Single" SelectedIndex="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  CanUserReorderColumns="False" SelectionChanged="SheetDataGrid_SelectionChanged">
            <DataGrid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Foreground" Value="{DynamicResource FgColor}"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="单号" Width="*" CanUserSort="True" SortMemberPath="ID">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ID}" HorizontalAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text,RelativeSource={RelativeSource Self}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="接单时间" Width="*" CanUserSort="True" SortMemberPath="StartDate">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding StartDate,StringFormat={}{0:yyyy-MM-dd}}" HorizontalAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text,RelativeSource={RelativeSource Self}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="完成时间" Width="*" CanUserSort="True" SortMemberPath="FinishDate">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FinishDate,StringFormat={}{0:yyyy-MM-dd}}" HorizontalAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text,RelativeSource={RelativeSource Self}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="结单时间" Width="*" CanUserSort="True" SortMemberPath="SettleDate">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding SettleDate,StringFormat={}{0:yyyy-MM-dd}}" HorizontalAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text,RelativeSource={RelativeSource Self}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="接单员" Width="*" CanUserSort="True" SortMemberPath="Accepter">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Accepter}" HorizontalAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding AccepterID,Converter={StaticResource stringFormatForIDConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="客户名称" Width="2.25*" CanUserSort="True" SortMemberPath="Customer">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Customer}" HorizontalAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text,RelativeSource={RelativeSource Self}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="业务类型" Width="1.25*" CanUserSort="True" SortMemberPath="BSType">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding BSType}" HorizontalAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text,RelativeSource={RelativeSource Self}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Column="2">
            <ListBox x:Name="OperationTypeList" ItemContainerStyle="{StaticResource OperationItem}" ItemsPanel="{StaticResource OperationItemsPanelTemplate}" SelectedIndex="0"
                     ItemsSource="{x:Static Helper:ResourceMap.OperationTypeHasntable}" DisplayMemberPath="Value" BorderThickness="0" SelectionChanged="OperationTypeList_SelectionChanged"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
        </Border>

        <ScrollViewer Grid.Column="2" Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden"  Padding="2,1" 
                      MouseLeave="ScrollViewer_MouseLeave" PreviewMouseMove="ScrollViewer_PreviewMouseMove" PreviewMouseLeftButtonDown="ScrollViewer_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="ScrollViewer_PreviewMouseLeftButtonUp">
            <StackPanel >
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Foreground" Value="{DynamicResource FgColor}"/>
                    </Style>
                </StackPanel.Resources>
                <Grid x:Name="SheetDetailGrid"  Helper:GridHelper.ShowBorder="true"  Background="#FFF1F1F1" DataContext="{Binding Path=SelectedValue,ElementName=SheetDataGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*" MinWidth="120"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*" MinWidth="120"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="单号：" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ID}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="3,0,0,0"/>

                    <TextBlock Text="接单渠道：" Grid.Column="2" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding From,Mode=TwoWay}" Grid.Column="3" Height="25" VerticalAlignment="Center" BorderThickness="0"
                         IsReadOnly="{Binding SelectedValue.Key, ElementName=OperationTypeList,Converter={StaticResource operationEnumToBoolConverter},ConverterParameter={StaticResource boolParam_true}}"/>

                    <TextBlock Text="接单日期：" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding StartDate,StringFormat={}{0:yyyy-MM-dd}}" Grid.Column="1" Grid.Row="1" Height="25" VerticalAlignment="Center" BorderThickness="0" IsReadOnly="True"
                         Visibility="{Binding SelectedValue.Key,ElementName=OperationTypeList,Converter={StaticResource operationEnumToVisibilityConverter}}"/>
                    <DatePicker x:Name="acceptDataPicker" Grid.Column="1" Grid.Row="1" SelectedDate="{Binding StartDate,Mode=TwoWay}" BorderThickness="0" Height="28" VerticalAlignment="Center" VerticalContentAlignment="Stretch" Foreground="{StaticResource FgColor}"
                            Visibility="{Binding SelectedValue.Key,ElementName=OperationTypeList,Converter={StaticResource operationEnumToNoVisibilityConverter}}" FontSize="13" SelectedDateChanged="DatePicker_SelectedDateChanged"/>

                    <TextBlock Text="完成日期：" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding FinishDate,StringFormat={}{0:yyyy-MM-dd}}" Grid.Column="3" Grid.Row="1" Height="25" VerticalAlignment="Center" BorderThickness="0" IsReadOnly="True"
                         Visibility="{Binding SelectedValue.Key,ElementName=OperationTypeList,Converter={StaticResource operationEnumToVisibilityConverter}}"/>
                    <DatePicker x:Name="finishDataPicker" Grid.Column="3" Grid.Row="1" SelectedDate="{Binding FinishDate,Mode=TwoWay}" BorderThickness="0" Height="28" VerticalAlignment="Center" VerticalContentAlignment="Stretch" Foreground="{StaticResource FgColor}"
                            Visibility="{Binding SelectedValue.Key,ElementName=OperationTypeList,Converter={StaticResource operationEnumToNoVisibilityConverter}}" FontSize="13" SelectedDateChanged="DatePicker_SelectedDateChanged" IsEnabled="{Binding SelectedDate,ElementName=acceptDataPicker,Converter={StaticResource nullToBoolConverter}}"/>

                    <TextBlock Text="结单日期：" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding SettleDate,StringFormat={}{0:yyyy-MM-dd}}" Grid.Column="3" Grid.Row="2" Height="25" VerticalAlignment="Center" BorderThickness="0" IsReadOnly="True"
                         Visibility="{Binding SelectedValue.Key,ElementName=OperationTypeList,Converter={StaticResource operationEnumToVisibilityConverter}}"/>
                    <DatePicker x:Name="settleDataPicker" Grid.Column="3" Grid.Row="2" SelectedDate="{Binding SettleDate,Mode=TwoWay}" BorderThickness="0" Height="28" VerticalAlignment="Center" VerticalContentAlignment="Stretch" Foreground="{StaticResource FgColor}"
                            Visibility="{Binding SelectedValue.Key,ElementName=OperationTypeList,Converter={StaticResource operationEnumToNoVisibilityConverter}}" FontSize="13" SelectedDateChanged="DatePicker_SelectedDateChanged" IsEnabled="{Binding SelectedDate,ElementName=finishDataPicker,Converter={StaticResource nullToBoolConverter}}"/>

                    <TextBlock Text="接单员：" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Accepter,Mode=TwoWay}" Grid.Column="1" Grid.Row="2" Height="25" VerticalAlignment="Center" BorderThickness="0" IsReadOnly="True"
                         Visibility="{Binding SelectedValue.Key, ElementName=OperationTypeList,Converter={StaticResource operationEnumToVisibilityConverter}}" ToolTip="{Binding AccepterID,Converter={StaticResource stringFormatForIDConverter}}"/>
                    <ComboBox x:Name="AccepterComboBox" Text="{Binding Accepter,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding AccepterID,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ToolTip="{Binding SelectedValue.ID,Converter={StaticResource stringFormatForIDConverter},RelativeSource={RelativeSource Self}}" DisplayMemberPath="EmployeeName" SelectedValuePath="ID" ItemContainerStyle="{StaticResource EmployeeComboBoxItem}" Grid.Column="1" Grid.Row="2" BorderBrush="{x:Null}"  IsEditable="False" FontSize="13"
                          Visibility="{Binding SelectedValue.Key,ElementName=OperationTypeList,Converter={StaticResource operationEnumToNoVisibilityConverter}}"/>

                    <TextBlock Text="跟单员：" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Follower,Mode=TwoWay}" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text,RelativeSource={RelativeSource Self}}" Margin="3,0,0,0"/>

                    <TextBlock Text="客户名称：" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Customer,Mode=TwoWay}" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3" Height="25" VerticalAlignment="Center" BorderThickness="0"
                         IsReadOnly="{Binding SelectedValue.Key, ElementName=OperationTypeList,Converter={StaticResource operationEnumToBoolConverter},ConverterParameter={StaticResource boolParam_true}}"/>

                    <TextBlock Text="联系人：" Grid.Column="0" Grid.Row="5" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Contacter,Mode=TwoWay}" Grid.Column="1" Grid.Row="5" Height="25" VerticalAlignment="Center" BorderThickness="0"
                         IsReadOnly="{Binding SelectedValue.Key, ElementName=OperationTypeList,Converter={StaticResource operationEnumToBoolConverter},ConverterParameter={StaticResource boolParam_true}}"/>

                    <TextBlock Text="联系电话：" Grid.Column="2" Grid.Row="5" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding PhoneNumber,Mode=TwoWay}" Grid.Column="3" Grid.Row="5" Height="25" VerticalAlignment="Center" BorderThickness="0"
                         IsReadOnly="{Binding SelectedValue.Key, ElementName=OperationTypeList,Converter={StaticResource operationEnumToBoolConverter},ConverterParameter={StaticResource boolParam_true}}"/>

                    <TextBlock Text="业务类型：" Grid.Row="6" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding BSType,Mode=TwoWay}" Grid.Column="1" Grid.Row="6" Height="25"  VerticalAlignment="Center" BorderThickness="0" IsReadOnly="True"
                          Visibility="{Binding SelectedValue.Key,ElementName=OperationTypeList,Converter={StaticResource operationEnumToVisibilityConverter}}"/>
                    <ComboBox x:Name="BsTypeComboBox" Text="{Binding BSType,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding BSTypeID,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="TypeName" SelectedValuePath="ID" Grid.Column="1" Grid.Row="6" BorderBrush="{x:Null}"  SelectedIndex="0" IsEditable="False"  FontSize="13"
                          Visibility="{Binding SelectedValue.Key,ElementName=OperationTypeList,Converter={StaticResource operationEnumToNoVisibilityConverter}}" SelectionChanged="BsTypeComboBox_SelectionChanged"/>

                    <TextBlock Text="报价(元)：" Grid.Column="2" Grid.Row="6" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Price,Mode=TwoWay}" Grid.Column="3" Grid.Row="6" Height="25" VerticalAlignment="Center" BorderThickness="0"
                         IsReadOnly="{Binding SelectedValue.Key, ElementName=OperationTypeList,Converter={StaticResource operationEnumToBoolConverter},ConverterParameter={StaticResource boolParam_true}}"/>

                    <TextBlock Text="备注：" Grid.Column="0" Grid.Row="7" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Remark,Mode=TwoWay}" Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="3" Height="25" VerticalAlignment="Center" BorderThickness="0"
                         IsReadOnly="{Binding SelectedValue.Key, ElementName=OperationTypeList,Converter={StaticResource operationEnumToBoolConverter},ConverterParameter={StaticResource boolParam_true}}"/>
                </Grid>

                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Border Background="#FFF1F1F1" BorderBrush="Black" BorderThickness="0.5,0.5,0.5 ,0">
                        <TextBlock x:Name="BSTypeTextBlock" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <DataGrid x:Name="ProcedureDataGrid" Grid.Row="1" CanUserSortColumns="False" CanUserAddRows="False" AutoGenerateColumns="False"
                   CanUserReorderColumns="False"  IsReadOnly="{Binding SelectedValue.Key, ElementName=OperationTypeList,Converter={StaticResource operationEnumToBoolConverter},ConverterParameter={StaticResource boolParam_true}}">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="日期" Width="90" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CompleteDate,StringFormat={}{0:yyyy-MM-dd}}" HorizontalAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text,RelativeSource={RelativeSource Self}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <DatePicker SelectedDate="{Binding Path=CompleteDate, Mode=TwoWay}" BorderThickness="0" VerticalContentAlignment="Stretch" FontSize="13"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="业务流程项" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ProcedureName}" HorizontalAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text,RelativeSource={RelativeSource Self}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox FontSize="13" Text="{Binding ProcedureName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" BorderBrush="{x:Null}" ItemsSource="{Binding SelectionProcedureInfoList}" DisplayMemberPath="Procedure" IsEditable="False">
                                        </ComboBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="负责人" Width="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding EmployeeName}" HorizontalAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding EmployeeID,Converter={StaticResource stringFormatForIDConverter}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox SelectedValue="{Binding EmployeeID,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="13" ToolTip="{Binding SelectedValue,Converter={StaticResource stringFormatForIDConverter},RelativeSource={RelativeSource Self}}" BorderBrush="{x:Null}" ItemsSource="{Binding SelectionEmployeeInfoList}" DisplayMemberPath="EmployeeName" ItemContainerStyle="{StaticResource EmployeeComboBoxItem}" SelectedValuePath="ID" IsEditable="False">
